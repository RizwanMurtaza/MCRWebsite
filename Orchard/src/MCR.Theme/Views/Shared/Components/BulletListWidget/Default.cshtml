@model MCR.Theme.ViewComponents.BulletListWidgetViewModel

@{
    var columnClass = Model.Columns switch
    {
        "2" => "col-md-6",
        "3" => "col-md-4",
        _ => "col-12"
    };

    var listStyleClass = Model.ListStyle?.ToLower() switch
    {
        "check" => "list-check",
        "arrow" => "list-arrow",
        "number" => "list-numbered",
        _ => "list-bullet"
    };
}

<section class="mcr-bullet-list-section py-5 @Model.CssClass">
    <div class="container">
        @if (!string.IsNullOrEmpty(Model.SectionTitle))
        {
            <div class="text-center mb-5">
                <h2 class="section-title">@Model.SectionTitle</h2>
                @if (!string.IsNullOrEmpty(Model.SectionSubtitle))
                {
                    <p class="section-subtitle text-muted">@Model.SectionSubtitle</p>
                }
            </div>
        }

        <div class="row">
            @if (Model.Columns == "1")
            {
                <div class="col-12">
                    <ul class="mcr-list @listStyleClass">
                        @foreach (var item in Model.Items)
                        {
                            <li>
                                @if (!string.IsNullOrEmpty(item.Url))
                                {
                                    <a href="@item.Url">@item.Text</a>
                                }
                                else
                                {
                                    @item.Text
                                }
                            </li>
                        }
                    </ul>
                </div>
            }
            else
            {
                @foreach (var item in Model.Items)
                {
                    <div class="@columnClass mb-3">
                        <div class="mcr-list-item @listStyleClass">
                            @if (!string.IsNullOrEmpty(item.Url))
                            {
                                <a href="@item.Url">@item.Text</a>
                            }
                            else
                            {
                                @item.Text
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<style>
    .mcr-bullet-list-section {
        background-color: #ffffff;
    }

    .mcr-bullet-list-section .section-title {
        color: #0d2137;
        font-weight: 600;
        position: relative;
        display: inline-block;
        padding-bottom: 15px;
    }

    .mcr-bullet-list-section .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #b8860b, #d4a84b);
    }

    .mcr-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .mcr-list li {
        padding: 0.75rem 0;
        padding-left: 2rem;
        position: relative;
        color: #4a5568;
        border-bottom: 1px solid #e2e8f0;
    }

    .mcr-list li:last-child {
        border-bottom: none;
    }

    .mcr-list.list-bullet li::before {
        content: '';
        position: absolute;
        left: 0;
        top: 1.1rem;
        width: 8px;
        height: 8px;
        background-color: #b8860b;
        border-radius: 50%;
    }

    .mcr-list.list-check li::before {
        content: '\f00c';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        position: absolute;
        left: 0;
        top: 0.75rem;
        color: #b8860b;
    }

    .mcr-list.list-arrow li::before {
        content: '\f054';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        position: absolute;
        left: 0;
        top: 0.75rem;
        color: #b8860b;
        font-size: 0.8rem;
    }

    .mcr-list.list-numbered {
        counter-reset: item;
    }

    .mcr-list.list-numbered li::before {
        content: counter(item);
        counter-increment: item;
        position: absolute;
        left: 0;
        top: 0.75rem;
        width: 24px;
        height: 24px;
        background-color: #b8860b;
        color: #ffffff;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .mcr-list-item {
        padding: 1rem 1.25rem;
        padding-left: 3rem;
        position: relative;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        color: #4a5568;
        transition: all 0.3s ease;
    }

    .mcr-list-item:hover {
        background-color: #e2e8f0;
    }

    .mcr-list-item.list-check::before {
        content: '\f00c';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #b8860b;
    }

    .mcr-list-item.list-bullet::before {
        content: '';
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        width: 8px;
        height: 8px;
        background-color: #b8860b;
        border-radius: 50%;
    }

    .mcr-list-item.list-arrow::before {
        content: '\f054';
        font-family: 'Font Awesome 6 Free';
        font-weight: 900;
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #b8860b;
        font-size: 0.8rem;
    }

    .mcr-list a,
    .mcr-list-item a {
        color: #0d2137;
        text-decoration: none;
        font-weight: 500;
    }

    .mcr-list a:hover,
    .mcr-list-item a:hover {
        color: #b8860b;
    }

    .mcr-bullet-list-section.bg-light {
        background-color: #f8f9fa;
    }

    .mcr-bullet-list-section.bg-light .mcr-list-item {
        background-color: #ffffff;
    }
</style>
