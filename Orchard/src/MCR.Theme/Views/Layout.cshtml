@using OrchardCore
@using OrchardCore.Settings
@using Microsoft.AspNetCore.Html
@inject ISiteService SiteService
@{
    var site = await SiteService.GetSiteSettingsAsync();
    var siteName = site.SiteName ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @* Page Title - uses Orchard's title segments which include SeoMetaPart PageTitle *@
    <title>@RenderTitleSegments(new HtmlString(siteName), "after", new HtmlString(" | "))</title>

    @* SEO Meta Tags - rendered by Orchard's SeoMetaPart *@
    <resources type="Meta" />
     
    @* Site-Wide Settings (favicon, theme-color, JSON-LD, GTM) *@
    @await Component.InvokeAsync("SiteWideSettings")

    @* Bootstrap 5 CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

    @* Font Awesome *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    @* Google Fonts - Elegant Typography *@
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />

    @* Theme CSS *@
    <link rel="stylesheet" href="/MCR.Theme/css/theme.css" asp-append-version="true" />

    @* Orchard Core Resources *@
    <resources type="HeadLink" />
    <resources type="HeadScript" />
    <resources type="Stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @* Skip to main content for accessibility *@
    <a href="#main-content" class="visually-hidden-focusable skip-link">Skip to main content</a>

    @* Top Bar *@
    @await Component.InvokeAsync("TopBar")

    @* Main Navigation *@
    @await Component.InvokeAsync("Navigation")

    @* Main Content *@
    <main id="main-content" class="main-content">
        @await RenderBodyAsync()
    </main>

    @* Footer *@
    @await Component.InvokeAsync("Footer")

    @* Bootstrap 5 JS Bundle *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    @* Navigation scroll effect *@
    <script>
        (function() {
            var header = document.querySelector('.main-header');
            if (header) {
                var onScroll = function() {
                    if (window.scrollY > 20) {
                        header.classList.add('scrolled');
                    } else {
                        header.classList.remove('scrolled');
                    }
                };
                window.addEventListener('scroll', onScroll, { passive: true });
                onScroll();
            }
        })();
    </script>

    @* Orchard Core Scripts *@
    <resources type="FootScript" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
