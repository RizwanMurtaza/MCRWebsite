@model MCRSolicitors.Theme.ViewComponents.FooterViewModel

<footer class="site-footer">
    <div class="footer-main">
        <div class="container">
            <div class="row">
                <!-- Legal Services Column -->
                <div class="col-lg-3 col-md-6 footer-col">
                    <h4 class="footer-heading">Legal Services</h4>
                    <ul class="footer-links">
                        <li><a href="/immigration">Visas & Immigration</a></li>
                        <li><a href="/family-law">Divorce & Family Law</a></li>
                        <li><a href="/personal-injury">Personal Injury</a></li>
                    </ul>
                </div>

                <!-- Legal Column -->
                <div class="col-lg-3 col-md-6 footer-col">
                    <h4 class="footer-heading">Legal</h4>
                    <ul class="footer-links">
                        <li><a href="/complaints-procedure">Complaints Procedure</a></li>
                        <li><a href="/privacy-policy">Privacy Policy</a></li>
                        <li><a href="/disclaimer">Disclaimer</a></li>
                        <li><a href="/cookie-policy">Cookie Policy</a></li>
                        <li><a href="/general-enquiries">General enquiries</a></li>
                        <li><a href="/contact-us">Contact us</a></li>
                    </ul>
                </div>

                <!-- Lexcel Accredited Column -->
                <div class="col-lg-3 col-md-6 footer-col">
                    <h4 class="footer-heading accent">Lexcel Accredited</h4>
                    <p class="footer-text">MCR Solicitors have been accredited with the Law Society (England and Wales) award, Lexcel.</p>
                    <div class="accreditation-badge lexcel-badge">
                        <div class="badge-placeholder">
                            <span class="badge-text">Accredited</span>
                            <span class="badge-title">LEXCEL</span>
                            <span class="badge-subtitle">PRACTICE MANAGEMENT<br/>STANDARD</span>
                        </div>
                    </div>
                </div>

                <!-- Regulated by SRA Column -->
                <div class="col-lg-3 col-md-6 footer-col">
                    <h4 class="footer-heading accent">Regulated by SRA</h4>
                    <p class="footer-text">Authorised and regulated by the Solicitors Regulation Authority under SRA ID: @(Model.SraNumber ?? "648878")</p>
                    <div class="accreditation-badge sra-badge-box">
                        <img src="/MCRSolicitors.Theme/images/sra-badge.png" alt="SRA Regulated" class="sra-logo" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Company Info Bar -->
    <div class="footer-company-bar">
        <div class="container">
            <p class="company-legal-text">
                @(Model.CompanyName ?? "MCR LAW ASSOCIATES LIMITED TRADING AS MCR SOLICITORS") is a company registered by company house in England and Wales Registration No. @(Model.CompanyRegistration ?? "11069807") Registered Address: @(Model.RegisteredAddress ?? "First Floor, 1024, Stockport Road, Manchester, England, M19 3WX"), United Kingdom MCR Solicitors is authorised and regulated by the Solicitors Regulation Authority SRA ID: @(Model.SraNumber ?? "648878"), VAT Registration No. @(Model.VatNumber ?? "GB 301011396")
            </p>
        </div>
    </div>

    <!-- Copyright Bar -->
    <div class="footer-bottom">
        <div class="container">
            <p class="copyright text-center">
                &copy; @Model.Year MCR SOLICITORS, ALL RIGHTS RESERVED
            </p>
        </div>
    </div>
</footer>
