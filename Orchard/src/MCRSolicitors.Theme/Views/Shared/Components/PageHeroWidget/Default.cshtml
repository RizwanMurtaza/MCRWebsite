@model MCRSolicitors.Theme.ViewComponents.PageHeroWidgetViewModel

<section class="page-hero" @(string.IsNullOrEmpty(Model.BackgroundImage) ? "" : $"style=\"background-image: url('{Model.BackgroundImage}');\"")>
    <div class="page-hero-overlay"></div>
    <div class="container">
        @if (Model.ShowBreadcrumb)
        {
            <nav aria-label="breadcrumb" class="page-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
        }
        @if (!string.IsNullOrEmpty(Model.Title))
        {
            <h1 class="page-title">@Model.Title</h1>
        }
        @if (!string.IsNullOrEmpty(Model.Subtitle))
        {
            <p class="page-subtitle">@Model.Subtitle</p>
        }
    </div>
</section>
