@model MCRSolicitors.Theme.ViewComponents.PageHeroWidgetViewModel

<section class="page-hero-section" @(string.IsNullOrEmpty(Model.BackgroundImage) ? "" : $"style=\"background-image: url('{Model.BackgroundImage}');\"")>
    <div class="page-hero-overlay"></div>
    <div class="container">
        <div class="page-hero-content">
            @if (Model.ShowBreadcrumb)
            {
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb-nav">
                        <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Home</a></li>
                        <li class="breadcrumb-separator"><i class="fas fa-chevron-right"></i></li>
                        <li class="breadcrumb-item active">@Model.Title</li>
                    </ol>
                </nav>
            }
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h1 class="page-hero-title">@Model.Title</h1>
            }
            @if (!string.IsNullOrEmpty(Model.Subtitle))
            {
                <p class="page-hero-subtitle">@Model.Subtitle</p>
            }
        </div>
    </div>
</section>
