@model MCRSolicitors.Theme.ViewModels.TestimonialItemPartViewModel

<fieldset class="form-group">
    <label asp-for="Quote" class="form-label">Testimonial Quote</label>
    <textarea asp-for="Quote" class="form-control" rows="4" placeholder="Enter the client's testimonial"></textarea>
    <span class="hint">The client's review or testimonial text</span>
</fieldset>

<div class="row">
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="ClientName" class="form-label">Client Name</label>
            <input asp-for="ClientName" class="form-control" placeholder="e.g., John D." />
            <span class="hint">Can use initials for privacy</span>
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="CaseType" class="form-label">Case Type (Optional)</label>
            <input asp-for="CaseType" class="form-control" placeholder="e.g., Spouse Visa Application" />
            <span class="hint">The type of legal service provided</span>
        </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="Rating" class="form-label">Rating (1-5 Stars)</label>
            <input asp-for="Rating" type="number" class="form-control" min="1" max="5" />
            <span class="hint">Star rating from 1 to 5</span>
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="DisplayOrder" class="form-label">Display Order</label>
            <input asp-for="DisplayOrder" type="number" class="form-control" min="0" />
            <span class="hint">Lower numbers appear first</span>
        </fieldset>
    </div>
</div>

<fieldset class="form-group">
    <label asp-for="ClientImageUrl" class="form-label">Client Photo URL (Optional)</label>
    <input asp-for="ClientImageUrl" class="form-control" placeholder="e.g., /images/testimonials/client1.jpg" />
    <span class="hint">Optional profile photo of the client</span>
</fieldset>
