@model MCRSolicitors.Theme.ViewModels.StatItemPartViewModel

<div class="row">
    <div class="col-md-4">
        <fieldset class="form-group">
            <label asp-for="Prefix" class="form-label">Prefix (Optional)</label>
            <input asp-for="Prefix" class="form-control" placeholder="e.g., $" />
            <span class="hint">Text before the value</span>
        </fieldset>
    </div>
    <div class="col-md-4">
        <fieldset class="form-group">
            <label asp-for="Value" class="form-label">Value</label>
            <input asp-for="Value" class="form-control" placeholder="e.g., 5000" />
            <span class="hint">The main number to display</span>
        </fieldset>
    </div>
    <div class="col-md-4">
        <fieldset class="form-group">
            <label asp-for="Suffix" class="form-label">Suffix (Optional)</label>
            <input asp-for="Suffix" class="form-control" placeholder="e.g., +" />
            <span class="hint">Text after the value (e.g., +, %, years)</span>
        </fieldset>
    </div>
</div>

<fieldset class="form-group">
    <label asp-for="Label" class="form-label">Label</label>
    <input asp-for="Label" class="form-control" placeholder="e.g., Clients Helped" />
    <span class="hint">Description below the number</span>
</fieldset>

<fieldset class="form-group">
    <label asp-for="IconClass" class="form-label">Icon Class (Optional)</label>
    <input asp-for="IconClass" class="form-control" placeholder="e.g., fas fa-users" />
    <span class="hint">Font Awesome icon class</span>
</fieldset>

<fieldset class="form-group">
    <label asp-for="DisplayOrder" class="form-label">Display Order</label>
    <input asp-for="DisplayOrder" type="number" class="form-control" min="0" />
    <span class="hint">Lower numbers appear first</span>
</fieldset>
