@model MCRSolicitors.Theme.ViewModels.CtaPartViewModel

<fieldset class="form-group">
    <label asp-for="Subtitle" class="form-label">Subtitle (Optional)</label>
    <input asp-for="Subtitle" class="form-control" placeholder="e.g., Get Expert Help Today" />
    <span class="hint">Small text above the main title</span>
</fieldset>

<fieldset class="form-group">
    <label asp-for="Title" class="form-label">Title</label>
    <input asp-for="Title" class="form-control" placeholder="e.g., Ready to Discuss Your Case?" />
    <span class="hint">The main call-to-action headline</span>
</fieldset>

<fieldset class="form-group">
    <label asp-for="Description" class="form-label">Description (Optional)</label>
    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Supporting text for the CTA"></textarea>
    <span class="hint">Additional text to encourage action</span>
</fieldset>

<h5 class="mt-4">Primary Button</h5>
<div class="row">
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="PrimaryButtonText" class="form-label">Button Text</label>
            <input asp-for="PrimaryButtonText" class="form-control" placeholder="e.g., Book Free Consultation" />
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="PrimaryButtonUrl" class="form-label">Button URL</label>
            <input asp-for="PrimaryButtonUrl" class="form-control" placeholder="e.g., /contact" />
        </fieldset>
    </div>
</div>

<h5 class="mt-4">Secondary Button (Optional)</h5>
<div class="row">
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="SecondaryButtonText" class="form-label">Button Text</label>
            <input asp-for="SecondaryButtonText" class="form-control" placeholder="e.g., Call Now" />
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="SecondaryButtonUrl" class="form-label">Button URL</label>
            <input asp-for="SecondaryButtonUrl" class="form-control" placeholder="e.g., tel:01onal618047777" />
        </fieldset>
    </div>
</div>

<h5 class="mt-4">Contact Information</h5>
<fieldset class="form-group">
    <div class="form-check">
        <input asp-for="ShowContactInfo" type="checkbox" class="form-check-input" />
        <label asp-for="ShowContactInfo" class="form-check-label">Show Contact Information</label>
    </div>
    <span class="hint">Display phone and email in the CTA section</span>
</fieldset>

<div class="row">
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="e.g., 0161 804 7777" />
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset class="form-group">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="e.g., info@mcrsolicitors.co.uk" />
        </fieldset>
    </div>
</div>

<fieldset class="form-group">
    <label asp-for="Style" class="form-label">CTA Style</label>
    <select asp-for="Style" class="form-control">
        <option value="Banner">Banner (Full Width)</option>
        <option value="Inline">Inline (Compact)</option>
    </select>
    <span class="hint">Choose the display style for this CTA</span>
</fieldset>
