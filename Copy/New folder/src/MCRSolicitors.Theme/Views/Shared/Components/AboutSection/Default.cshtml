@model MCRSolicitors.Theme.Models.AboutPageViewModel

<section class="mcr-about-section">
    <div class="container">
        @* About Intro *@
        <div class="about-intro">
            <div class="about-content">
                <span class="section-subtitle">Who We Are</span>
                <h2>@Model.Title</h2>
                @foreach (var paragraph in Model.IntroText.Split("\n\n", StringSplitOptions.RemoveEmptyEntries))
                {
                    <p>@paragraph</p>
                }
                <div class="about-cta">
                    <a href="/contact" class="btn btn-primary">
                        Contact Us Today
                    </a>
                    <a href="/services" class="btn btn-outline">
                        Our Services
                    </a>
                </div>
            </div>
            <div class="about-image">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="MCR Solicitors Office" loading="lazy" />
                }
                else
                {
                    <div class="image-placeholder">
                        <i class="fas fa-building"></i>
                        <span>MCR Solicitors</span>
                    </div>
                }
            </div>
        </div>

        @* Our Values *@
        @if (Model.Values.Any())
        {
            <div class="about-values">
                <div class="section-header">
                    <span class="section-subtitle">Our Values</span>
                    <h2 class="section-title">What We Stand For</h2>
                    <p class="section-description">Our core values guide everything we do and define who we are as a firm.</p>
                </div>
                <div class="values-grid">
                    @foreach (var value in Model.Values)
                    {
                        <div class="value-card">
                            <div class="value-icon">
                                <i class="@value.IconClass"></i>
                            </div>
                            <h3 class="value-title">@value.Title</h3>
                            <p class="value-description">@value.Description</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</section>
